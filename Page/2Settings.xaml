<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" 
             x:Class="LaserBendingMeasurementSystem.Page.MenuSettings"
             mc:Ignorable="d" 
             d:DesignHeight="595" d:DesignWidth="1200">
    <UserControl.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FF7F7F7F" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
            <Setter Property="Width" Value="170" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="tabBtnBorder"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter
                                ContentSource="Header"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center" 
                                Margin="10"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter
                                    TargetName="tabBtnBorder"
                                    Property="Background"
                                    Value="#FF264457" />
                                <Setter
                                    TargetName="tabBtnBorder"
                                    Property="Control.Foreground"
                                    Value="#FFFFFFFF" />
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter
                                    TargetName="tabBtnBorder"
                                    Property="Background"
                                    Value="#FF264457" />
                                <Setter
                                    TargetName="tabBtnBorder"
                                    Property="Control.Foreground"
                                    Value="#FFFFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Title" TargetType="{x:Type TextBlock}">
            <Setter Property="Control.Foreground" Value="#FFC000" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style x:Key="Title_T" TargetType="{x:Type TextBox}">
            <Setter Property="Control.Foreground" Value="#FFC000" />
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style x:Key="Index" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Control.Foreground" Value="#8DD6C1" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
            <Setter Property="FlowDirection" Value="RightToLeft" />
        </Style>
        <Style x:Key="Index2" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Control.Foreground" Value="#8DD6C1" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
        </Style>
        <Style x:Key="TextBlockContents" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Height" Value="33.4" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Control.Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style x:Key="ComboBoxContents" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="33.4" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Background" Value="#FF192E3A"/>
            <Setter Property="BorderThickness" Value="0"/>

        </Style>

        <Style x:Key="TextBoxContents" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="BorderBrush" Value="#8DD6C1"/>
            <Setter Property="Height" Value="33.4" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style x:Key="TextBoxContents2" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="33.4" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Control.Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style x:Key="ButtonContents" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Height" Value="33.4" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style x:Key="CheckBoxContents" TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Height" Value="33.4" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />
        </Style>
        <Style x:Key="RadioButtonContents" TargetType="{x:Type RadioButton}">
            <Setter Property="Background" Value="#11FFFFFF" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="33.4" />
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="LG Smart UI Regular" />

        </Style>
        <ControlTemplate x:Key="ComboBoxTemplate1" TargetType="{x:Type ComboBox}">
            <Grid x:Name="templateRoot" SnapsToDevicePixels="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition MinWidth="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}" Width="0"/>
                </Grid.ColumnDefinitions>
                <Popup x:Name="PART_Popup" AllowsTransparency="True" Grid.ColumnSpan="2" IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Margin="1" PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}" Placement="Bottom">
                    <Themes:SystemDropShadowChrome x:Name="shadow" Color="Transparent" MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{Binding ActualWidth, ElementName=templateRoot}">
                        <Border x:Name="DropDownBorder" BorderBrush="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" BorderThickness="1" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
                            <ScrollViewer x:Name="DropDownScrollViewer">
                                <Grid x:Name="grid" RenderOptions.ClearTypeHint="Enabled">
                                    <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0">
                                        <Rectangle x:Name="OpaqueRect" Fill="{Binding Background, ElementName=DropDownBorder}" Height="{Binding ActualHeight, ElementName=DropDownBorder}" Width="{Binding ActualWidth, ElementName=DropDownBorder}"/>
                                    </Canvas>
                                    <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Themes:SystemDropShadowChrome>
                </Popup>
                <ToggleButton x:Name="toggleButton" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Grid.ColumnSpan="2" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" >
                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="IsTabStop" Value="False"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="ClickMode" Value="Press"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border x:Name="templateRoot" BorderBrush="#8DD6C1" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True" Background="#01000000">
                                            <Border x:Name="splitBorder" BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Right" Margin="0" SnapsToDevicePixels="True" Width="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}">
                                                <Path x:Name="Arrow" Data="F1M0,0L2.667,2.66665 5.3334,0 5.3334,-1.78168 2.6667,0.88501 0,-1.78168 0,0z" Fill="#8DD6C1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center"/>
                                            </Border>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsEditable, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ComboBox}}}" Value="true"/>
                                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="false"/>
                                                    <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource Self}}" Value="false"/>
                                                    <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="true"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" TargetName="templateRoot" Value="#8DD6C1"/>
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#8DD6C1"/>
                                                <Setter Property="Background" TargetName="splitBorder" Value="#8DD6C1"/>
                                                <Setter Property="BorderBrush" TargetName="splitBorder" Value="Transparent"/>
                                            </MultiDataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Fill" TargetName="Arrow" Value="Black"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="true"/>
                                                    <Condition Binding="{Binding IsEditable, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ComboBox}}}" Value="false"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" TargetName="templateRoot">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                            <GradientStop Color="#FF264457" Offset="0"/>
                                                            <GradientStop Color="#FF264457" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FF7EB4EA"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="true"/>
                                                    <Condition Binding="{Binding IsEditable, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ComboBox}}}" Value="true"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" TargetName="templateRoot" Value="#8DD6C1"/>
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FF7EB4EA"/>
                                                <Setter Property="Background" TargetName="splitBorder">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                            <GradientStop Color="#FFEBF4FC" Offset="0"/>
                                                            <GradientStop Color="#FFDCECFC" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="BorderBrush" TargetName="splitBorder" Value="#FF7EB4EA"/>
                                            </MultiDataTrigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#8DD6C1"/>
                                                <Setter Property="Fill" TargetName="Arrow" Value="Black"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource Self}}" Value="true"/>
                                                    <Condition Binding="{Binding IsEditable, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ComboBox}}}" Value="false"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" TargetName="templateRoot">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                            <GradientStop Color="#8DD6C1" Offset="0"/>
                                                            <GradientStop Color="#8DD6C1" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FF569DE5"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource Self}}" Value="true"/>
                                                    <Condition Binding="{Binding IsEditable, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ComboBox}}}" Value="true"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" TargetName="templateRoot" Value="#8DD6C1"/>
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FF569DE5"/>
                                                <Setter Property="Background" TargetName="splitBorder">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                            <GradientStop Color="#8DD6C1" Offset="0"/>
                                                            <GradientStop Color="#8DD6C1" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="BorderBrush" TargetName="splitBorder" Value="#FF569DE5"/>
                                            </MultiDataTrigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Fill" TargetName="Arrow" Value="#FFBFBFBF"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="false"/>
                                                    <Condition Binding="{Binding IsEditable, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ComboBox}}}" Value="false"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" TargetName="templateRoot" Value="#8DD6C1"/>
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FFD9D9D9"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="false"/>
                                                    <Condition Binding="{Binding IsEditable, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ComboBox}}}" Value="true"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" TargetName="templateRoot" Value="#8DD6C1"/>
                                                <Setter Property="BorderBrush" TargetName="templateRoot" Value="#FFBFBFBF"/>
                                                <Setter Property="Background" TargetName="splitBorder" Value="#8DD6C1"/>
                                                <Setter Property="BorderBrush" TargetName="splitBorder" Value="Transparent"/>
                                            </MultiDataTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
                <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Content="{TemplateBinding SelectionBoxItem}" ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsHitTestVisible="False" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="HasDropShadow" SourceName="PART_Popup" Value="True">
                    <Setter Property="Margin" TargetName="shadow" Value="0,0,5,5"/>
                    <Setter Property="Color" TargetName="shadow" Value="#71000000"/>
                </Trigger>
                <Trigger Property="HasItems" Value="False">
                    <Setter Property="Height" TargetName="DropDownBorder" Value="95"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsGrouping" Value="True"/>
                        <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                </MultiTrigger>
                <Trigger Property="CanContentScroll" SourceName="DropDownScrollViewer" Value="False">
                    <Setter Property="Canvas.Top" TargetName="OpaqueRect" Value="{Binding VerticalOffset, ElementName=DropDownScrollViewer}"/>
                    <Setter Property="Canvas.Left" TargetName="OpaqueRect" Value="{Binding HorizontalOffset, ElementName=DropDownScrollViewer}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <ControlTemplate x:Key="ComboBoxItemTemplate1" TargetType="{x:Type ComboBoxItem}">
            <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="TextElement.Foreground" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="False"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsKeyboardFocused" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" TargetName="Bd" Value="#8DD6C1"/>
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#A826A0DA"/>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="False"/>
                        <Condition Property="IsKeyboardFocused" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" TargetName="Bd" Value="#8DD6C1"/>
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#FF26A0DA"/>
                    <Setter Property="Foreground" Value="Black"/>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" TargetName="Bd" Value="#8DD6C1"/>
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#99006CD9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="False"/>
                        <Condition Property="IsKeyboardFocused" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" TargetName="Bd" Value="#8DD6C1"/>
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#FFDADADA"/>
                    <Setter Property="Foreground" Value="Black"/>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="False"/>
                        <Condition Property="IsMouseOver" Value="False"/>
                        <Condition Property="IsKeyboardFocused" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#8DD6C1"/>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="False"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsKeyboardFocused" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" TargetName="Bd" Value="#8DD6C1"/>
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#FF26A0DA"/>
                    <Setter Property="Foreground" Value="Black"/>
                </MultiTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid Background="#FF192E3A">
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Width="1030" Height="80" Panel.ZIndex="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.45,0" SpreadMethod="Pad" MappingMode="RelativeToBoundingBox">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF192E3A" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <ComboBox Margin="180,0,0,0" x:Name="ComboBox1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="816" Height="30" SelectionChanged="ComboBox1_SelectionChanged">
                <ComboBoxItem Content="Coffie"/>
                <ComboBoxItem Content="Tea"/>
                <ComboBoxItem Content="Orange Juice"/>
                <ComboBoxItem Content="Milk"/>
                <ComboBoxItem Content="Iced Tea"/>
                <ComboBoxItem Content="Mango Shake"/>
                <ComboBoxItem Content="test"/>
            </ComboBox>
            <TextBlock HorizontalAlignment="Left" Margin="30,0,0,0" Text="레시피 리스트" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="24" FontFamily="LG Smart UI Regular" Foreground="White"/>
        </Grid>

        <TabControl TabStripPlacement="Left">
            <TabItem IsEnabled="False" BorderBrush="{x:Null}" Visibility="Visible" Width="140" Padding="0,0,0,0" ScrollViewer.CanContentScroll="True" Height="140">
                <TabItem.Background>
                    <ImageBrush ImageSource="/Resource/ImgSettings.png" Stretch="UniformToFill"/>
                </TabItem.Background>
            </TabItem>
            <TabItem IsEnabled="False" BorderBrush="{x:Null}" Visibility="Visible" Background="{x:Null}" Header="설 정    " FontSize="36" Foreground="White" HorizontalAlignment="Center"/>

            <TabItem Header="레시피" IsSelected="True" Height="50">
                <Grid Background="#FF264457" Margin="-3,-3,-3,-3">
                    <ScrollViewer  Width="800" Height="450" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30,30,0,30" MaxWidth="800" Grid.Column="2" Grid.Row="20" ScrollViewer.CanContentScroll="True">
                        <ScrollViewer.Background>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                <GradientStop Color="#33000000"/>
                                <GradientStop Color="#333E8853" Offset="1"/>
                            </LinearGradientBrush>
                        </ScrollViewer.Background>

                        <DockPanel LastChildFill="False">
                            <StackPanel Width="790" Margin="0,0,0,0">
                                <DockPanel LastChildFill="False">
                                    <StackPanel Width="280" Margin="30,10,0,10">
                                        <!--레시피 스펙 설정-->
                                        <TextBox x:Name="Recipe_Name" Style="{StaticResource Title_T}" Text="기기명1" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="크기 가로" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="크기 세로" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="두께" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="편차가능 편차" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="설정할 편차 범위" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Width="450" Margin="0,10,10,10" DockPanel.Dock="Left">
                                        <TextBlock Style="{StaticResource Title}" Text="" TextWrapping="Wrap"/>
                                        <TextBox x:Name="Recipe_Width" Text="" Style="{StaticResource TextBoxContents}" TextChanged="Recipe_Width_TextChanged"/>
                                        <TextBox x:Name="Recipe_Height" Text="" Style="{StaticResource TextBoxContents}" TextChanged="Recipe_Height_TextChanged"/>
                                        <TextBox x:Name="Recipe_Weight" Style="{StaticResource TextBoxContents}"/>
                                        <TextBlock Text="200μm = 0.2mm = 0.02cm" Style="{StaticResource Index2}"/>
                                        <TextBox x:Name="Recipe_Range" Style="{StaticResource TextBoxContents}"/>
                                    </StackPanel>

                                </DockPanel>
                                <DockPanel LastChildFill="False">
                                    <StackPanel Width="150" Margin="30,10,0,10">
                                        <!--레시피 수동/자동 설정-->
                                        <TextBlock Style="{StaticResource Index}" Text="기준점 입력 선택" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="기준점1" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="기준점2" TextWrapping="Wrap"/>
                                        <TextBlock Style="{StaticResource Index}" Text="기준점3" TextWrapping="Wrap"/>
